{
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": "airbnb-base/legacy",
  "globals": {
    "Blacklight": true,
    "bootstrap": true,
    "Stimulus": true,
  },
  "rules": {
    "no-param-reassign": [2, { "props": false }],
    "func-names": ["error", "never"],
    "indent": ["warn"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["warn", "never"]
  }
}
